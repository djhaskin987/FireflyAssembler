libraryPath = '/usr/lib'
sources = ['Types.hpp', \
    'Sequence.cpp', 'Sequence.hpp', \
    'Graph.hpp', 'Graph.cpp', \
    'Path.hpp', 'Path.cpp', \
    'FitnessFunction.hpp',
    'MeanOverlap.cpp', 'MeanOverlap.hpp', \
    'PathFinder.hpp', \
    'GreedyPathFinder.hpp', 'GreedyPathFinder.cpp']
prod = Environment()
prod.Append(CCFLAGS = ['-O0','-g','-std=c++11','-Werror'])
prod.Append(CFLAGS = ['-std=c++11','-Werror'])
prod.Append(LINKFLAGS = ['-std=c++11','-Werror'])
prod.Append(LINKFLAGS = ['-lboost_regex'])
prod.Append(LIBPATH = [libraryPath])
mainSources = sources
mainSources.append('FireflyAssembler-main.cpp')
program = prod.Program('FireflyAssembler', mainSources)
Default(program)
