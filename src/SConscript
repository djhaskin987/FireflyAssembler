libraryPaths = [ '/usr/lib', '/usr/local/lib' ]
sources = ['Sequence.cpp', \
    'Graph.cpp', \
    'Path.cpp', \
    'MeanOverlap.cpp', \
    'N50Rating.cpp', \
    'GreedyPathFinder.cpp', \
    'LocalSearchPathFinder.cpp', \
    'FireflyPathFinder.cpp', \
    'HammingDistance.cpp']
prod = Environment()
prod.Append(CCFLAGS = ['-O0','-g','-std=c++11','-Werror'])
prod.Append(CFLAGS = ['-std=c++11','-Werror'])
prod.Append(LINKFLAGS = ['-std=c++11','-Werror'])
prod.Append(LIBPATH = libraryPaths)
mainSources = sources
mainSources.append('FireflyAssembler-main.cpp')
program = prod.Program('FireflyAssembler', mainSources)
Default(program)
